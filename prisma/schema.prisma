generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  schemas   = ["public"]
}

model User {
  id               String            @id @db.Uuid
  email            String            @unique
  name             String?
  role             UserRole?         @default(STUDENT)
  studentId        String?           @unique
  departmentId     String?           @db.Uuid
  isFinalYear      Boolean?          @default(false)
  createdAt        DateTime          @default(now())
  updatedAt        DateTime?         @updatedAt
  calendarEvents   CalendarEvent[]
  chatMessages     ChatMessage[]
  enrollments      Enrollment[]
  forumComments    ForumComment[]
  forumPosts       ForumPost[]
  groupMemberships GroupMembership[]
  notes            Note[]
  quizAttempts     QuizAttempt[]
  uploads          Upload[]
  pages            Page[]
  studentApplications StudentApplication[]
  createdThesisGroups ThesisGroup[] @relation("ThesisGroupCreator")
  groupMembers      GroupMember[] @relation("GroupMember")
  joinRequests      GroupJoinRequest[] @relation("JoinRequest")
  department       Department?       @relation(fields: [departmentId], references: [id])

  @@map("users")
  @@schema("public")
}

model Faculty {
  id            String          @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  initial       String          @unique
  name          String?
  email         String?
  designation   String?
  room          String?
  theoryCourses CourseOffered[] @relation("TheoryFaculty")
  lab1Courses   CourseOffered[] @relation("LabFaculty1")
  lab2Courses   CourseOffered[] @relation("LabFaculty2")

  @@schema("public")
}

model Department {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  code      String   @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  courses   Course[]
  users     User[]

  @@map("departments")
  @@schema("public")
}

model Semester {
  id             String          @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name           String
  season         String
  year           Int
  startDate      DateTime
  endDate        DateTime
  isActive       Boolean         @default(false)
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  coursesOffered CourseOffered[]

  @@unique([season, year])
  @@map("semesters")
  @@schema("public")
}

model Course {
  id             String          @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  code           String          @unique
  title          String
  credits        Int             @default(3)
  description    String?
  departmentId   String          @db.Uuid
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  department     Department      @relation(fields: [departmentId], references: [id])
  coursesOffered CourseOffered[]
  forumPosts     ForumPost[]
  notes          Note[]

  @@map("courses")
  @@schema("public")
}

model CourseOffered {
  id                String         @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  courseId          String         @db.Uuid
  semesterId        String         @db.Uuid
  section           String
  roomNumber        String?
  classSchedule     Json?
  midtermDate       DateTime?
  midtermTime       String?
  midtermRoom       String?
  finalDate         DateTime?
  finalTime         String?
  finalRoom         String?
  theoryFacultyId   String?        @db.Uuid
  labFaculty1Id     String?        @db.Uuid
  labFaculty2Id     String?        @db.Uuid
  theoryFaculty     Faculty?       @relation("TheoryFaculty", fields: [theoryFacultyId], references: [id])
  labFaculty1       Faculty?       @relation("LabFaculty1", fields: [labFaculty1Id], references: [id])
  labFaculty2       Faculty?       @relation("LabFaculty2", fields: [labFaculty2Id], references: [id])
  consultationHours Json?
  maxStudents       Int?
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  assignments       Assignment[]
  chatChannel       ChatChannel?
  course            Course         @relation(fields: [courseId], references: [id], onDelete: Cascade)
  semester          Semester       @relation(fields: [semesterId], references: [id], onDelete: Cascade)
  enrollments       Enrollment[]
  projectGroups     ProjectGroup[]
  quizzes           Quiz[]
  resources         Resource[]
  events            CalendarEvent[]

  @@unique([courseId, semesterId, section])
  @@index([semesterId])
  @@index([courseId])
  @@map("courses_offered")
  @@schema("public")
}

model Enrollment {
  id              String        @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId          String        @db.Uuid
  courseOfferedId String        @db.Uuid
  enrolledAt      DateTime      @default(now())
  courseOffered   CourseOffered @relation(fields: [courseOfferedId], references: [id], onDelete: Cascade)
  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, courseOfferedId])
  @@index([userId])
  @@index([courseOfferedId])
  @@map("enrollments")
  @@schema("public")
}

model Assignment {
  id              String        @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  courseOfferedId String        @db.Uuid
  title           String
  description     String?
  dueDate         DateTime
  totalMarks      Int?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  courseOffered   CourseOffered @relation(fields: [courseOfferedId], references: [id], onDelete: Cascade)

  @@index([courseOfferedId])
  @@map("assignments")
  @@schema("public")
}

model Quiz {
  id              String        @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  courseOfferedId String        @db.Uuid
  title           String
  description     String?
  dueDate         DateTime?
  duration        Int?
  totalMarks      Int?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  courseOffered   CourseOffered @relation(fields: [courseOfferedId], references: [id], onDelete: Cascade)

  @@index([courseOfferedId])
  @@map("quizzes")
  @@schema("public")
}

model Resource {
  id              String        @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  courseOfferedId String        @db.Uuid
  title           String
  type            ResourceType
  url             String
  createdAt       DateTime      @default(now())
  courseOffered   CourseOffered @relation(fields: [courseOfferedId], references: [id], onDelete: Cascade)

  @@index([courseOfferedId])
  @@map("resources")
  @@schema("public")
}

model Note {
  id           String        @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId       String        @db.Uuid
  courseId     String?       @db.Uuid
  title        String
  content      Json
  topic        String?
  tags         String[]
  noteType     NoteType      @default(DIGITAL)
  progress     Json?         @default("{\"currentPage\":1,\"scrollPosition\":0,\"pagesRead\":[]}")
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  course       Course?       @relation(fields: [courseId], references: [id])
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  quizAttempts QuizAttempt[]
  uploads      Upload[]

  @@index([userId])
  @@index([courseId])
  @@map("notes")
  @@schema("public")
}

model Upload {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId    String   @db.Uuid
  noteId    String?  @db.Uuid
  fileName  String
  fileUrl   String
  fileType  String
  fileSize  Int
  createdAt DateTime @default(now())
  note      Note?    @relation(fields: [noteId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([noteId])
  @@map("uploads")
  @@schema("public")
}

model QuizAttempt {
  id             String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId         String   @db.Uuid
  noteId         String   @db.Uuid
  score          Int
  totalQuestions Int
  createdAt      DateTime @default(now())
  note           Note     @relation(fields: [noteId], references: [id], onDelete: Cascade)
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([noteId])
  @@map("quiz_attempts")
  @@schema("public")
}

model CalendarEvent {
  id              String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId          String    @db.Uuid
  title           String
  description     String?
  eventType       EventType
  pageId          String?   @unique @db.Uuid
  page            Page?     @relation(fields: [pageId], references: [id], onDelete: SetNull)
  startTime       DateTime
  includeTime     Boolean?  @default(false)
  endTime         DateTime?
  location        String?
  reminderTime    DateTime?
  group           Boolean?   @default(false)
  isImported      Boolean   @default(false)
  courseOfferedId String    @db.Uuid
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  courseOffered   CourseOffered @relation(fields: [courseOfferedId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([courseOfferedId])
  @@index([startTime])
  @@index([userId, startTime]) // For user's events ordered by time
  @@index([courseOfferedId, startTime]) // For course events ordered by time
  @@map("calendar_events")
  @@schema("public")
}

model Page {
  id            String         @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  content       Json
  isPublished   Boolean        @default(true)
  calendarEvent CalendarEvent? 
  userId        String         @db.Uuid
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  @@map("pages")
  @@schema("public")
}

model ChatChannel {
  id              String        @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  courseOfferedId String        @unique @db.Uuid
  createdAt       DateTime      @default(now())
  courseOffered   CourseOffered @relation(fields: [courseOfferedId], references: [id], onDelete: Cascade)
  messages        ChatMessage[]

  @@map("chat_channels")
  @@schema("public")
}

model ChatMessage {
  id        String      @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  channelId String      @db.Uuid
  userId    String      @db.Uuid
  sender    String
  content   String
  imageUrl  String?
  createdAt DateTime    @default(now())
  channel   ChatChannel @relation(fields: [channelId], references: [id], onDelete: Cascade)
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([channelId])
  @@index([userId])
  @@map("chat_messages")
  @@schema("public")
}

model ProjectGroup {
  id              String            @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  courseOfferedId String            @db.Uuid
  name            String
  description     String?
  createdAt       DateTime          @default(now())
  members         GroupMembership[]
  courseOffered   CourseOffered     @relation(fields: [courseOfferedId], references: [id], onDelete: Cascade)

  @@index([courseOfferedId])
  @@map("project_groups")
  @@schema("public")
}

model GroupMembership {
  id      String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  groupId String       @db.Uuid
  userId  String       @db.Uuid
  role    String?
  group   ProjectGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user    User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([groupId, userId])
  @@index([groupId])
  @@index([userId])
  @@map("group_memberships")
  @@schema("public")
}

model ForumPost {
  id         String         @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  courseId   String         @db.Uuid
  authorId   String         @db.Uuid
  title      String
  content    String
  isResolved Boolean        @default(false)
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt
  comments   ForumComment[]
  author     User           @relation(fields: [authorId], references: [id], onDelete: Cascade)
  course     Course         @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@index([courseId])
  @@index([authorId])
  @@index([isResolved])
  @@map("forum_posts")
  @@schema("public")
}

model ForumComment {
  id        String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  postId    String    @db.Uuid
  authorId  String    @db.Uuid
  content   String
  createdAt DateTime  @default(now())
  author    User      @relation(fields: [authorId], references: [id], onDelete: Cascade)
  post      ForumPost @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@index([postId])
  @@index([authorId])
  @@map("forum_comments")
  @@schema("public")
}

enum UserRole {
  STUDENT
  ADMIN

  @@schema("public")
}

enum ResourceType {
  LINK
  DOCUMENT
  VIDEO
  OTHER

  @@schema("public")
}

enum NoteType {
  DIGITAL
  SCANNED

  @@schema("public")
}

enum EventType {
  CLASS
  EXAM
  MIDTERM
  FINAL
  ASSIGNMENT
  QUIZ
  CONSULTATION
  MEETING
  OTHER

  @@schema("public")
}

model Supervisor {
  id                 String               @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  facultyId          String?              @db.Uuid
  name               String
  email              String               @unique
  department         String
  expertise          String[]
  currentThesis      Int                  @default(0)
  currentInternship  Int                  @default(0)
  maxThesisSlots     Int                  @default(5)
  maxInternshipSlots Int                  @default(3)
  bio                String?
  phoneNumber        String?
  office             String?
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  thesisSlots        ThesisSlot[]
  internshipSlots    InternshipSlot[]
  applications       StudentApplication[]
  thesisGroups       ThesisGroup[]

  @@map("supervisors")
  @@schema("public")
}

model ThesisSlot {
  id             String               @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  supervisorId   String               @db.Uuid
  title          String
  description    String?
  requiredSkills String[]
  availableFrom  DateTime
  availableTo    DateTime
  isOpen         Boolean              @default(true)
  applications   StudentApplication[]
  thesisGroups   ThesisGroup[]
  supervisor     Supervisor           @relation(fields: [supervisorId], references: [id], onDelete: Cascade)
  createdAt      DateTime             @default(now())
  updatedAt      DateTime             @updatedAt

  @@index([supervisorId])
  @@index([isOpen])
  @@map("thesis_slots")
  @@schema("public")
}

model InternshipSlot {
  id             String               @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  supervisorId   String               @db.Uuid
  title          String
  description    String?
  company        String
  duration       String // e.g., "6 weeks", "3 months"
  requiredSkills String[]
  stipend        String?
  availableFrom  DateTime
  availableTo    DateTime
  isOpen         Boolean              @default(true)
  applications   StudentApplication[]
  supervisor     Supervisor           @relation(fields: [supervisorId], references: [id], onDelete: Cascade)
  createdAt      DateTime             @default(now())
  updatedAt      DateTime             @updatedAt

  @@index([supervisorId])
  @@index([isOpen])
  @@map("internship_slots")
  @@schema("public")
}

model StudentApplication {
  id               String            @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  studentId        String            @db.Uuid
  supervisorId     String            @db.Uuid
  thesisSlotId     String?           @db.Uuid
  internshipSlotId String?           @db.Uuid
  status           ApplicationStatus @default(PENDING)
  appliedAt        DateTime          @default(now())
  message          String?
  resume           String? // URL to resume file
  student          User              @relation(fields: [studentId], references: [id], onDelete: Cascade)
  supervisor       Supervisor        @relation(fields: [supervisorId], references: [id], onDelete: Cascade)
  thesisSlot       ThesisSlot?       @relation(fields: [thesisSlotId], references: [id], onDelete: SetNull)
  internshipSlot   InternshipSlot?   @relation(fields: [internshipSlotId], references: [id], onDelete: SetNull)

  @@index([studentId])
  @@index([supervisorId])
  @@index([status])
  @@map("student_applications")
  @@schema("public")
}

enum ApplicationStatus {
  PENDING
  ACCEPTED
  REJECTED
  WITHDRAWN

  @@schema("public")
}

model ThesisGroup {
  id           String             @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  creatorId    String             @db.Uuid
  title        String
  description  String?
  thesisSlotId String?            @db.Uuid
  supervisorId String?            @db.Uuid
  maxMembers   Int                @default(5)
  topic        String?
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt
  creator      User               @relation("ThesisGroupCreator", fields: [creatorId], references: [id], onDelete: Cascade)
  members      GroupMember[]
  joinRequests GroupJoinRequest[]
  thesisSlot   ThesisSlot?        @relation(fields: [thesisSlotId], references: [id], onDelete: SetNull)
  supervisor   Supervisor?        @relation(fields: [supervisorId], references: [id], onDelete: SetNull)

  @@index([creatorId])
  @@index([thesisSlotId])
  @@index([supervisorId])
  @@map("thesis_groups")
  @@schema("public")
}

model GroupMember {
  id       String      @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  groupId  String      @db.Uuid
  userId   String      @db.Uuid
  role     String      @default("MEMBER") // CREATOR, CO-LEAD, MEMBER
  joinedAt DateTime    @default(now())
  group    ThesisGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user     User        @relation("GroupMember", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([groupId, userId])
  @@index([groupId])
  @@index([userId])
  @@map("group_members")
  @@schema("public")
}

model GroupJoinRequest {
  id          String            @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  groupId     String            @db.Uuid
  userId      String            @db.Uuid
  status      JoinRequestStatus @default(PENDING) // PENDING, ACCEPTED, REJECTED
  message     String?
  requestedAt DateTime          @default(now())
  respondedAt DateTime?
  group       ThesisGroup       @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user        User              @relation("JoinRequest", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([groupId, userId])
  @@index([groupId])
  @@index([userId])
  @@index([status])
  @@map("group_join_requests")
  @@schema("public")
}

enum JoinRequestStatus {
  PENDING
  ACCEPTED
  REJECTED

  @@schema("public")
}
